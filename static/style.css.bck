body {
  background-color: #000;
  color: #fff;
  font-family: "Arial", sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
}

.container {
  width: 95%;
  max-width: 1200px;
  text-align: center;
}

.headline {
  font-size: 1.8rem;
  margin-bottom: 10px;
}

.headline span {
  color: #ccc;
  font-weight: normal;
}

.logo img {
  height: 80px;
  margin: 10px auto 20px;
}

/* === GRID DÃœZENÄ° === */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr; /* iki sÃ¼tun */
  gap: 40px;
  justify-content: center;
}

.field {
  margin-bottom: 20px;
}

label {
  display: block;
  font-weight: bold;
  text-align: left;
  margin-left: 10px;
  font-size: 1.2rem;
}

.blue-box,
.red-box {
  height: 60px;                /* Sabit yÃ¼kseklik */
  width: 100%;                 /* Grid hÃ¼cresine uyum saÄŸlar */
  border-radius: 45px;
  border: 4px solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  font-weight: bold;
  color: #fff;
  transition: none;
}

.blue-box {
  background-color: #007bff;
}

.red-box {
  background-color: #ff3b30;
}

.message {
  margin-top: 40px;
  font-size: 1.4rem;
  line-height: 1.6;
}

.hidden {
  display: none !important;
}

/* === SONUÃ‡ / RESULT SATIRI === */
.result-field {
  grid-column: 1 / -1;  /* ğŸ”¥ TÃ¼m satÄ±rÄ± kapsa */
  width: 100%;
  text-align: center;
}

.result-field label {
  font-size: 1.8rem;   /* ğŸ”¥ Daha belirgin, ama baÅŸlÄ±kla uyumlu */
  text-align: center;
  display: block;
  margin-bottom: 10px;
  font-weight: bold;
  letter-spacing: 0.5px;
}

.result-field .blue-box {
  height: 60px;          /* AynÄ± yÃ¼kseklik */
  width: 100%;           /* SatÄ±rÄ±n tamamÄ± */
  font-size: 2rem;
  border-radius: 45px;
  border: 4px solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Animasyon */
.fade-in {
  animation: fadeIn 0.4s ease-in-out;
}

.logo-bar {
  display: flex;
  justify-content: center;      /* ortala */
  align-items: center;          /* dikey merkez */
  gap: 80px;                    /* logolar arasÄ± boÅŸluk */
  margin-top: 40px;
  width: 100%;
  flex-wrap: nowrap;
}

/* Her logoya temel gÃ¶rÃ¼nÃ¼m */
